{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      "@nestjs/graphql/plugin"
    ]
  },
  "plugins": [
    {
      "name": "@nestjs/graphql/plugin",
      "options": {
        "typeFileNameSuffix": [
          ".input.ts",
          ".model.ts"
        ]
      }
    }
  ]
}
